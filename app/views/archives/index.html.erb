<div class="archives-cell">
    <h2>Blog Archive</h2>

    <% @article_months.sort.reverse.each do |month, articles| %>
    <h3><%= month.strftime("%B %Y") %></h3>
    <ul>
    	<% articles.each do |article| %>
        <li><%= link_to article.title, article_path(article) %></li>
        <% end %>
    </ul>
    <% end %>
</div>
